 /dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"

/ {
	model = "Nejcraft Yummy";
	compatible = "nejcraft,yummy", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
	};

	chosen {
		stdout-path = "serial0: 115200n8";
	};
/*		
	leds {
		compatible = "gpio-leds";

        green_led {
			label = "Heartbeat";
			gpios = <&pio 4 9 GPIO_ACTIVE_LOW>; /* PE9 *//*
		    linux,default-trigger = "heartbeat";
		};
        
	};*/

	wifi_pwrseq: wifi-pwrseq {
		compatible = "mmc-pwrseq-simple";
	};

    backlight: backlight {
        compatible = "gpio-backlight";
        gpios = <&pio 1 4 GPIO_ACTIVE_HIGH>; // PB4
    };
};

&pio {
	gpio-line-names = 
        /* GPIOA */
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        /* GPIOB */
        "PB0", "PB1", "PB2", "PB3", "PB4", "PB5", "PB6", "PB7",
        "PB8", "PB9", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "",
        /* GPIOC */
        "PC0", "PC1", "PC2", "PC3", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        /* GPIOD */
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",//128
        /* GPIOE */
    	"PE0", "PE1", "PE2", "PE3", "PE4", "PE5", "PE6", "PE7",
    	"PE8", "PE9", "PE10", "PE11", "PE12", "PE13", "PE14", "PE15",
    	"PE16", "PE17", "PE18", "PE19", "PE20", "PE21", "PE22", "PE23", "PE24",
        "", "", "", "", "", "", "", "",
        /* GPIOF */
        "PF0", "PF1", "PF2", "PF3", "PF4", "PF5", "PF6", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",//192
        /* GPIOG */
        "PG0", "PG1", "PG2", "PG3", "PG4", "PG5", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "",
        "", "", "", "", "", "", "", "";



};

&mmc0 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};


&mmc1 {
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";

    /*
	rtl8723ds: wifi@1 {
		reg = <1>;
		interrupt-parent = <&pio>;
		interrupts = <6 10 IRQ_TYPE_LEVEL_LOW>; // PG10 
		interrupt-names = "host-wake";
	};*/
};


&uart0 {
	pinctrl-0 = <&uart0_pb_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&uart2{
	status = "okay";
};

&i2c0 {
	status = "okay";

    touch: tsc2007@48 {
			compatible = "ti,tsc2007";
			reg = <0x48>;
            
            interrupt-parent = <&pio>;//PB5
			interrupts = <0 0x5 2>;//PB_EINT5 - bank 0, interrupt 5
			gpios = <&pio 1 5 GPIO_ACTIVE_HIGH>;//PB5

			ti,x-plate-ohms = <300>;
            panel = <&display>;
            touchscreen-swapped-x-y = <1>;
	};
};


&spi0_pins {
    pins = "PC1", "PC2", "PC3";
};
&spi0 {
	status = "okay";

    display: display@0{        
		compatible = "sitronix,st7796";
		reg = <0>;
        write-only;
		spi-max-frequency = <32000000>;
		dc-gpios = <&pio 2 0 GPIO_ACTIVE_HIGH>; //PC0
		reset-gpios = <&pio 1 2 GPIO_ACTIVE_HIGH>; //PB2, for testing PB5
		rotation = <90>;
		backlight = <&backlight>;
    };
};

&codec {
	status = "okay";
};

